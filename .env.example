# IG Markets Credentials
IG_API_KEY=your_ig_api_key
IG_USERNAME=your_username
IG_PASSWORD=your_password
IG_ACC_ID=your_account_id

# Google Gemini AI
GEMINI_API_KEY=your_gemini_api_key

# Home Assistant (Alerting)
HA_API_URL=http://192.168.0.207:8123
HA_ACCESS_TOKEN=your_long_lived_token
HA_NOTIFY_ENTITY=notify.mobile_app_pixel_8

# Settings
IS_LIVE=false  # Set to 'true' for REAL MONEY trading
CONSECUTIVE_LOSS_LIMIT=4 # Number of consecutive losses before sending an alert
MIN_ACCOUNT_BALANCE=0.0 # Minimum account balance to maintain (Stop trading or reduce size if breached)
BREAKEVEN_TRIGGER_R=1.5 # Risk Multiple (R) at which to move stop to breakeven (e.g., 1.5 means move to BE when profit equals 1.5x initial risk)
